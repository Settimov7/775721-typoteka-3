extends ../layout

block content
  main
    section.search-page
      .search-page__wrapper
        h1 Поиск
        .search.search-page__form
          form(action='/search', method='GET')
            label
              input(type='text', name='search' value=(query || '') placeholder='Что ищем?')
            button.search__button.button.button--transparent(type='submit') Найти

          each resultItem in results
            .search__result
              time.search__date(datetime=resultItem.createdDate) #{new Date(resultItem.createdDate).toLocaleString()}
              a.search__link(href='/articles/'+resultItem.id) #{resultItem.title}
