extends ../layout

block content
  main
    section.modal.modal--flex
      .popup.popup--new-publication.popup--flex
        .new-publication
          form(action='/articles/add', method='POST')
            .new-publication__header
              h1 Новая публикация
              .new-publication__date-form
                h3 Дата публикации
                .new-publication__date-form-division
                  .new-publication__date-block
                    label(for='new-publication-date', aria-label='Календарь')
                    input#new-publication-date(type='text', name='createdDate', value=(article ? article.createdDate : '') placeholder='21.03.2019')
                  p.form__error-message #{errors ? errors['createdDate'] : ''}
              button.new-publication__button.button.button--colored(type='submit') Опубликовать
            button.popup__button.button.button--popup-close(type='button', aria-label='Закрыть окно')
              | Закрыть
              | окно
            .new-publication__form.form
              .form__wrapper.form__wrapper--intro
                .form__field
                  label
                    input(type='text', name='title' placeholder='Заголовок', value=(article ? article.title : ''), required)
                p.form__error-message #{errors ? errors['title'] : ''}
                .new-publication__checkbox.new-publication__checkbox--auto
                  each category in categories
                    input(
                      id='category-checkbox-' + category.id type='checkbox',
                      name='category',
                      value=category.id,
                      checked=(article && article.categories ? article.categories.some(({title}) => title === category.title) : false)
                    )
                    label(for='category-checkbox-' + category.id) #{category.title}
                p.form__error-message #{errors ? errors['categories'] : ''}
                a.new-publication__form-link.button.button--transparent(href='#') Добавить категорию
              .form__wrapper.form__wrapper--text
                .form__field.form__field--publication-text
                  label
                    textarea(rows='2', name='announce' placeholder='Анонс публикации')
                      | #{article ? article.announce : ''}
                p.form__error-message #{errors ? errors['announce'] : ''}
                .form__field.form__field--publication-text
                  label
                    textarea(rows='5', name='fullText' placeholder='Полный текст публикации')
                      | #{article ? article.fullText : ''}
                p.form__error-message #{errors ? errors['fullText'] : ''}
      .modal__overlay

